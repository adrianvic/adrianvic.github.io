---
pagination:
  data: i18n
  size: 1
  alias: langKey
permalink: "/{{ langKey }}/blog/index.html"
layout: base.njk
title: Adrian Victor:Blog
---

<main>
  <p><b>{{ i18n[langKey].blogTitle | smartTitle }}</b></p>
  <ul>
    {% for post in collections.post %}
      {% if post.data.langKey == langKey %}
        <li class="postListEntry">
          <p class="postInfo">
            <a href="{{ post.url }}">{{ post.data.postTitle }}</a><br>
            {{ post.data.date }}
          </p>
          {% if post.data.tags %}
            <div class="postMiniTagContainer">
              {% for tag in post.data.tags %}
                <div class="postMiniTag pmt-{{tag}}">{{tag}}</div>
              {% endfor %}
            </div>
          {% endif %}
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</main>
